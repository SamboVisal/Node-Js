<div class="container">
  <div class="row">
    <div class="col s12 m4">
      <div class="card center-align">
        <div class="card-content">
          <span class="card-title">{{userInfo.firstName}} {{userInfo.lastName}}</span>
          <img src="{{userInfo.image}}" class="circle responsive-img">
        </div>
        <div class="card-action">
          {{#if priority}}
          <p>add your
            Your Description.
          </p>
          {{else}} 
            {{foundBio.description}}
          {{/if}}

        </div>
      </div>
    </div>
    <div class="col s12 m8">
      <div class="card">
        <div class="card-content">
          <h4>Information</h4>
          {{#if user}}

          <p>
            <i class="fa fa-user"></i> Full Name: {{userInfo.firstName}} {{userInfo.lastName}}</p>
          <p>
            <i class="fa fa-book"></i> Story: {{userSto.length}}</p>
          <p>
            <i class="fa fa-university"></i> Education: {{foundBio.education}}</p>
          <p>
            <i class="fa fa-home"></i> From: {{foundBio.from}}</p>
          <p>
            <i class="fa fa-location-arrow"></i> Live: {{foundBio.live}}</p>
          <p>
            <a href="/users/edit/bio/{{userInfo.id}}"></a>
          </p>
          {{#if priority}}
          <p>
            <a href="/users/add/{{userInfo._id}}">Add Your Information.</a>
          </p>
          {{else}} 
          
          {{/if}}
          {{else}}
          <p>Please
            <a href="/auth/google">Log In</a> to see user's information.</p>
          {{/if}}

        </div>
      </div>
    </div>
  </div>

</div>